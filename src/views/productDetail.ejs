<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalle de producto</title>
    <link rel="stylesheet" href="/css/productDetail.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700;900&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <header></header>
    <main>
        <section class="section-detalle">
            <div class="campo-detalle">
                <h1><%= products.title %></h1>
                <h2>$<%= products.price %></h2>
                <div class="condiciones-de-compra-true">
                    <i class="fas fa-shield-alt"></i>
                    <H3>Garantia <%= products.garantia %></H3>
                </div>
                <% if (products.stock) { %>
                <div class="condiciones-de-compra-true">
                    <i class="fas fa-check-square"></i>
                    <h3>Stock</h3>
                </div>
                <% } else { %>
                <div class="condiciones-de-compra-false">
                    <i class="fas fa-window-close"></i>
                    <h3>Sin stock</h3>
                </div>
                <% } %>

                <% if (products.envio) { %>
                <div class="condiciones-de-compra-true">
                    <i class="fas fa-truck"></i>
                    <h3>Envio</h3>
                </div>
                <% } else { %>
                    <div class="condiciones-de-compra-false">
                        <i class="fas fa-truck"></i>
                        <h3>Sin envio</h3>
                    </div>                
                <% } %>
                <div>
                    <form action="/" class="form-cantidad">
                        <input type="text" placeholder="1">
                        <button>Agregar al carrito</button>
                    </form>
                </div>
            </div>
            <div class="campo-imagenes">
                <div class="campo-imagen-grande">
                    <img src="/img/<%= products.img[0] %>" alt="<%= products.title %>">
                </div>
                <div class="campo-imagenes-chicas">
                    <% products.img.forEach((imagenes) =>{ %>
                        <img src="/img/<%=imagenes%>">
                    <% }) %>
                </div>
            </div>
        </section>
        <section class="section-caracteristicas">
           <h3>ESPECIFICACIONES</h3> 
            <ul>
                <% products.especificaciones.forEach((especificacion) =>{ %>
                <li><h4><%= especificacion %></h4></li>
                <% }) %>
            </ul>
        </section>
    </main>
    <footer></footer>
</body>
</html>