<!DOCTYPE html>
<html lang="es">

<%- include('partials/head.ejs',{title:'Inicio'}) %>

<body>
    <!-- HEADER -->
    <%- include('partials/header.ejs') %>

    <main>
        <section class="portada">
            <div class="boton-izq">
                <i class="fas fa-backward"></i>
            </div>
            <img title="Promocion 2024" src="/img/portada1.webp" alt="Promocion gaming mode">
            <div class="boton-der">
                <i class="fas fa-forward"></i>
            </div>            
        </section>
        <section class="section-novedades">
            <h2>NOVEDADES</h2>
            <div class="campo-novedades">
                <% for (let i = 0; i < products.length ; i++) {%>
                <article class="campo-articulo">
                    <a href="/products/detail/<%= products[i].id%>">
                        <figure>
                            <img src= "/img/<%= products[i].img %>" alt="<%= products.title %>">
                        </figure>
                        
                        <div class="campo-articulo-info">
                            <p>$<%= products[i].price %></p>
                            <h4><%= products[i].title %></h4>
                        </div>
                        <div class="campo-articulo-boton">
                            <form action="#">
                                <button class="boton-agregar">Agregar al carrito</button>
                            </form>
                        </div>
                    </a>
                </article>
                <% } %>
            </div>
        </section>
    </main>
    
    <!-- FOOTER -->
    <%- include('partials/footer.ejs') %>
</body>
</html>