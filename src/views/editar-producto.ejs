<!DOCTYPE html>
<html lang="es">

<%- include('partials/head.ejs',{title:'Editar producto'}) %>

<body>
    <!-- HEADER -->
    <%- include('partials/header.ejs') %>
  

  <main class="main-crear-producto">
    <section class="container">
      <form  id="" class="form-register form-create-product" action="/products/edit/<%=idFound.id%>?_method=PUT" method="POST" enctype="multipart/form-data">
        <fieldset>
          <legend class="title-form">EDITAR PRODUCTO</legend>
          <section class="errors-create-product">
            <ul></ul>
          </section>
          <div class="campo-info">
            <input name="title" type="text" class="name" value="<%= idFound.title %>">
            <label class="label-form" for="title">Ingresa el nombre del producto</label>
          </div>
          <div class="campo-info campo-info-descripcion">
            <label for="description">Descripción del producto</label>
            <textarea name="description" class="label-form description" rows="3"><%= idFound.description%></textarea>
          </div>
          <div class="campo-info">
            <label class="label-selector" for="brand">Marca del producto</label>
            <select name="brand" id="brand" class="brand">
              <option value="<%= idFound.id_brand %>"><%= brandName %></option>
              <option value="1">SAMSUNG</option>
              <option value="2">LG</option>
              <option value="3">HYPERX</option>
              <option value="4">AMD</option>
              <option value="5">INTEL</option>
              <option value="6">GIGABYTE</option>
              <option value="7">ASUS</option>
              <option value="8">LENOVO</option>
              <option value="9">ACER</option>
              <option value="10">REDRAGON</option>
              <option value="11">LOGITECH</option>
              <option value="12">SONY</option>
              <option value="13">MICROSOFT</option>
              <option value="14">NINTENDO</option>
            </select>
          </div>
          <div class="campo-info">
            <input name="warranty" type="text" class="warranty" value="<%= idFound.warranty %>">
            <label class="label-form" for="warranty">Ingresa la garantía</label>
          </div>
          <div class="campo-info">
            <input name="price" type="text" class="price" value=" <%= idFound.price%>">
            <label class="label-form" for="price">Ingresa el precio</label>
          </div>
          <div class="campo-info">
            <input name="discount" type="text" class="discount" value="<%= idFound.discount%>">
            <label class="label-form" for="discount">Ingresa el descuento</label>
          </div>
          <div class="campo-info">
            <input name="stock" type="text" class="stock" value="<%= idFound.stock%>">
            <label class="label-form" for="stock">Ingresa el stock</label>
          </div>
          <div class="campo-info">
            <label class="label-selector" for="category">Categoría del producto</label>
            <select name="category" id="category" class="category">
              <option value="<%= idFound.id_category %>"><%= categoryName %></option>
              <option value="1">PC DESKTOP</option>
              <option value="2">PC PORTATIL</option>
              <option value="3">CONSOLA</option>
              <option value="4">PERIFERICO</option>
            </select>
          </div>
          <div class="campo-info">
            <label for="image" class="label-image">Subir Imagen</label>
            <input name="image" class="input-image" type="file">
          </div>
          <div class="campo-info campo-info-descripcion">
            <label for="specifications">Especificacion</label>
            <textarea name="specifications" class="label-form specifications" rows="3" value=""><%= idFound.specifications%></textarea>
          </div>
          <div class="campo-info">
            <button class="btn" type="submit">Editar producto</button>
          </div>
        </Fieldset>
      </form>
    </section>
  </main>
  

    <!-- FOOTER -->
    <%- include('partials/footer.ejs') %>
    
  <script src="/js/product_validations.js"></script>
</body>

</html>